<p id="notice"><%= notice %></p>
<h2> Shopping Cart </h2>
  <ul>
    <li> <% @cart.line_items.each do |item| %> </li>
    <li> <%= item.product.title %> <%= item.product.price %> </li>
    <% end %>
  </ul>

  <p> Total: <%= @cart.purchase_total %> </p>

<%= button_to 'Store', products_path, method: :get %>
