<p id="notice"><%= notice %></p>

<div class="container" id="product_list">

  <h1 class="text-center"> Listing Products</h1>

  <br>

  <div>
    <% @products.each_slice(3) do |slice|%>
      <div class="row">
        <% slice.each do |item|%>
          <div class="col-xs-4">
            <ul>
              <li>Product: <%= item.title %></li>
              <li>Price: $<%= item.price %></li>
              <li>Description: <%= item.description %></li>
              <li>Seller: <%= item.seller_id %></li>
              <li><%= link_to 'Display Item', item, :class => 'btn btn-primary btn-xs' %></li>
            </ul>
            <br>
          </div>
        <%end%>
      </div>
    <%end%>
  </div>

</div>
